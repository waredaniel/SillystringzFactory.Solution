@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="jumbotron text-center">
  <h1> Edit Engineer</h1>
</div>
<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          @Html.ActionLink("Home", "Index", "Home", null, new { @class="nav-link" })
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Machines
          </a>
          <ul class="dropdown-menu">
            <li>@Html.ActionLink("All Machines", "Index", "Machines", null, new { @class="dropdown-item" })</li>
            <li>@Html.ActionLink("Add New Machine", "Create", "Machines", null, new { @class="dropdown-item" })</li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Engineers
          </a>
          <ul class="dropdown-menu">
            <li>@Html.ActionLink("All Engineers", "Index", "Engineers", null, new { @class="dropdown-item" })</li>
            <li>@Html.ActionLink("Add New Engineer", "Create", "Engineers", null, new { @class="dropdown-item" })</li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
<hr />
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.Label("Engineer Name:", null, new { @class="col-form-label col-sm-2" })
  @Html.EditorFor(model => model.EngineerName)
  @Html.Label("License Expiration Date:", null, new { @class="col-form-label col-sm-2" })
  @Html.EditorFor(model => model.EngineerLicenseExpDate)
  @Html.Label("Accident Count:", null, new { @class="col-form-label col-sm-2" })
  @Html.EditorFor(model => model.EngineerAccidentCount)

  <input type="submit" value="Save Changes" />
}

<p>@Html.ActionLink("Back to Engineers List", "Index")</p>